{
  "name": "nudge",
  "version": "0.5.0",
  "description": "Your gentle AI life coach. Sometimes you need a little nudge.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lifelog": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "cli": "node dist/cli/index.js",
    "migrate": "node dist/storage/migrate.js",
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat run scripts/deploy.cjs --network monadTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.cjs --network monad",
    "verify": "hardhat run scripts/verify.cjs --network monadTestnet"
  },
  "keywords": [
    "nudge",
    "ai",
    "life-coach",
    "wellness",
    "habits",
    "web3",
    "monad",
    "token",
    "acp",
    "virtuals"
  ],
  "author": "0xrichyrich",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "better-sqlite3": "^11.7.0",
    "commander": "^13.0.0",
    "date-fns": "^4.1.0",
    "ethers": "^6.13.0",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.0",
    "hardhat": "^2.22.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
